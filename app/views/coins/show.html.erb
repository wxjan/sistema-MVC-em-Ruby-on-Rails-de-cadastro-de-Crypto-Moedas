<p id="notice"><%= notice %></p>
<form>
  <div class="form-group">
    <%= label_tag nil, @coin.description %>
    <%= text_field_tag nil, @coin.description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.acronym %>
    <%= text_field_tag nil, @coin.acronym,  class:"form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.url_image %>
    <%= text_field_tag nil, @coin.url_image , class:"form-control" %>
  </div>

<div class="form-group">
  <%= label_tag nil, 'Mining Type Description' %>
  <%= text_field_tag nil, @coin.mining_type.description, class: "form-control", readonly: true %>
</div>

  
</form>

<%= link_to t('links.edit'), edit_coin_path(@coin), class: "btn btn-primary" %> |
